#include<stdio.h>
int main(){
        int firstNum=0,secondNum=1,result=0;
        int i,j;
        int n=5;
        for(i=1;i<=n;i++){
            for(j=1;j<=i;j++){
                firstNum=secondNum;
                secondNum=result;
                printf("%2d",result);
                result=firstNum+secondNum;
                
            }
            firstNum=0;
            secondNum=1;
            result=0;
            printf("\n");
        }

return 0;
    
    
}

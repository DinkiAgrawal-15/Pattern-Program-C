#include<stdio.h>
int main(){
    int n=5,x=2;
    int i,j;
    for(i=n;i>=1;i--)
    {
        for(j=1;j<=n;j++){
         if(i<=j){
            printf("%2d",x);
            x+=2;
         }
            else{
          printf(" ");
            }

        }
    printf("\n");
    
}
    return 0;
}

